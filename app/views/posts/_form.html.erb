<%= form_with(model: @post, local: true ,url: confirm_posts_path ) do |form| %>

  <% if @post.errors.any? %>

    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.submit %>
<% end %>

<%= link_to "つぶやき一覧画面にもどる", posts_path %>
